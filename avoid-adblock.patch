     $url_components = parse_url($url);
 
     // Build the xmlrpc path, based on the delivery url.
-    $xmlrpc_basepath = substr($url_components['path'], 0, strpos($url_components['path'], '/delivery', 0)) . '/api/v2/xmlrpc/';
+    #$xmlrpc_basepath = substr($url_components['path'], 0, strpos($url_components['path'], '/delivery', 0)) . '/api/v2/xmlrpc/';
