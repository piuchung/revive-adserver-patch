diff --git a/src/Plugin/Block/ReviveAdserverZoneBlock.php b/src/Plugin/Block/ReviveAdserverZoneBlock.php
index 7676c41..9c6f239 100644
--- a/src/Plugin/Block/ReviveAdserverZoneBlock.php
+++ b/src/Plugin/Block/ReviveAdserverZoneBlock.php
@@ -68,8 +68,8 @@ class ReviveAdserverZoneBlock extends BlockBase implements ContainerFactoryPlugi
     $invocationMethod = $this->invocationMethodManager->loadInvocationMethodFromInput($method);
     if ($invocationMethod) {
       $invocationMethod->setZoneId($config['zone_id']);
-      $invocationMethod->setBlockBanner($config['block_banner']);
-      $invocationMethod->setBlockBannerCampaign($config['block_banner_campaign']);
+      $invocationMethod->setBlockBanner($config['block_banner'] ?? FALSE);
+      $invocationMethod->setBlockBannerCampaign($config['block_banner_campaign'] ?? FALSE);
       $invocationMethod->prepare();
       $build = $invocationMethod->render();
     }
diff --git a/src/Plugin/ReviveAdserver/InvocationMethod/AsyncJavascript.php b/src/Plugin/ReviveAdserver/InvocationMethod/AsyncJavascript.php
